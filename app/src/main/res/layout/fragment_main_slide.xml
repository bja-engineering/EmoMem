<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/masterFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_emomem_bg_filled"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/userButton"
            android:text="@string/user_number"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerInParent="true"
            android:background="@drawable/img_1f464_user"
            android:contentDescription="user"
            android:hapticFeedbackEnabled="true" />

        <ImageButton
            android:id="@+id/interestButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/userButton"
            android:layout_marginStart="18dp"
            android:background="@drawable/img_1f913_alertness"
            android:contentDescription="interest/alertness"
            android:hapticFeedbackEnabled="true" />

        <ImageButton
            android:id="@+id/pleasureButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="17dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/img_1f60a_pleasure"
            android:contentDescription="pleasure"
            android:hapticFeedbackEnabled="true" />

        <ImageButton
            android:id="@+id/sadnessButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/userButton"
            android:layout_marginEnd="18dp"
            android:background="@drawable/img_1f622_sadness"
            android:contentDescription="sadness"
            android:hapticFeedbackEnabled="true" />

        <ImageButton
            android:id="@+id/angerButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26dp"
            android:layout_toStartOf="@+id/pleasureButton"
            android:background="@drawable/img_1f620_anger"
            android:contentDescription="anger"
            android:hapticFeedbackEnabled="true" />

        <ImageButton
            android:id="@+id/fearButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/angerButton"
            android:layout_toEndOf="@+id/pleasureButton"
            android:background="@drawable/img_1f628_fear"
            android:contentDescription="fear"
            android:hapticFeedbackEnabled="true" />

    </RelativeLayout>

</android.support.wear.widget.BoxInsetLayout>